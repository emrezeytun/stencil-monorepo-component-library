{
  "name": "@arcadia-components/button",
  "version": "1.0.6",
  "description": "Button component built with Stencil",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/button/button.esm.js",
  "exports": {
    ".": {
      "import": "./dist/button/button.esm.js",
      "require": "./dist/button/button.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./button": {
      "import": "./dist/components/button.js",
      "types": "./dist/components/button.d.ts"
    },
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs",
      "types": "./loader/index.d.ts"
    },
    "./react": {
      "import": "./bindings/react/index.js",
      "types": "./bindings/react/index.d.ts"
    },
    "./vue": {
      "import": "./bindings/vue/index.js",
      "types": "./bindings/vue/index.d.ts"
    },
    "./bindings/vue": {
      "import": "./bindings/vue/index.js",
      "types": "./bindings/vue/index.d.ts"
    },
    "./bindings/vue/index.js": {
      "import": "./bindings/vue/index.js",
      "types": "./bindings/vue/index.d.ts"
    },
    "./angular": {
      "import": "./bindings/angular/index.js",
      "types": "./bindings/angular/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "loader/",
    "bindings/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec",
    "test.watch": "stencil test --spec --watchAll",
    "generate": "stencil generate",
    "storybook": "storybook dev -p 6009",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "stencil",
    "web-components",
    "button",
    "ui",
    "component",
    "react",
    "vue",
    "angular",
    "arcadia-components"
  ],
  "author": "Arcadia Components",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/arcadia-components.git",
    "directory": "packages/button"
  },
  "homepage": "https://github.com/your-org/arcadia-components#readme",
  "bugs": {
    "url": "https://github.com/your-org/arcadia-components/issues"
  },
  "devDependencies": {
    "@stencil/core": "^4.27.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^24.3.0",
    "typescript": "^5.3.0"
  },
  "gitHead": "8cb0519888418c79da209e1b2807e05e1dc31cc6"
}
