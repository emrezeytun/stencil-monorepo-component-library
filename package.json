  "private": true,
  "description": "Component library monorepo with separate Stencil projects",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:changed": "lerna run build --since",
    "test": "lerna run test",
    "start": "lerna run start --parallel",
    "storybook": "storybook dev -p 6010",
    "build-storybook": "storybook build",
    "storybook:packages": "lerna run storybook --parallel",
    "clean": "lerna clean",
    "publish": "lerna publish from-package",
    "publish:changed": "lerna publish from-git",
    "version": "lerna version --conventional-commits",
    "version:patch": "lerna version patch",
    "version:minor": "lerna version minor", 
    "version:major": "lerna version major",
    "prepublish": "npm run build",
